{
	"name": "daily-diet-api",
	"version": "1.0.0",
	"description": "",
	"main": "./src/server.ts",
	"scripts": {
		"start:dev": "tsx watch src/server.ts",

		"knex": "tsx ./node_modules/knex/bin/cli.js --knexfile ./knexfile.ts",
		"migrate:make": "npm run knex -- migrate:make",
		"migrate:latest": "npm run knex -- migrate:latest",

		"start:test": "npx vitest",
		"test:prepare": "NODE_ENV=test npm run migrate:latest",
		"test:all": "npm run test:prepare && npm run start:test",

		"build": "npx tsup ./src --out-dir ./build"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"dotenv": "^17.2.0",
		"fastify": "^5.4.0",
		"knex": "^3.1.0",
		"sqlite3": "^5.1.7",
		"supertest": "^7.1.4",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@types/node": "^24.0.15",
		"@types/supertest": "^6.0.3",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
